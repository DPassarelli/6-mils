{
  "name": "6-mils",
  "version": "0.5.0",
  "description": "A JS library for sending, receiving, and parsing cXML messages.",
  "main": "main.js",
  "scripts": {
    "cover:test": "nyc --silent npm run test:unit && nyc --no-clean npm run test:func",
    "cover:report": "nyc report --reporter=text-lcov",
    "coverage": "npm run cover:test && npm run cover:report | coveralls",
    "lint": "standard",
    "test:unit": "mocha \"./{,!(node_modules)/**/}*.spec.js\"",
    "test:func": "mocha test/functional/harness.js",
    "test": "npm run lint && npm run cover:test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DPassarelli/6-mils.git"
  },
  "keywords": [
    "cxml",
    "xml",
    "commerce"
  ],
  "author": "David Passarelli <dpassarelli@camelotcg.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/DPassarelli/6-mils/issues"
  },
  "homepage": "https://github.com/DPassarelli/6-mils#readme",
  "engines": {
    "node": ">=8"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.11",
    "mocha": "^7.1.1",
    "nyc": "^15.0.0",
    "standard": "^14.3.3",
    "w3c-xml-validator": "^1.1.0"
  },
  "dependencies": {
    "debug": "^4.1.1",
    "got": "^9.6.0",
    "is-plain-obj": "^2.1.0",
    "lodash.merge": "^4.6.2",
    "luxon": "^1.24.1",
    "nunjucks": "^3.2.1",
    "ulid": "^2.3.0",
    "whatwg-url": "^7.1.0",
    "xml-js": "^1.6.11"
  },
  "mocha": {
    "reporter": "min",
    "file": "test/setup.js",
    "ui": "bdd"
  },
  "standard": {
    "global": [
      "expect"
    ]
  },
  "nyc": {
    "check-coverage": true,
    "exclude": [
      "**/*.spec.js",
      "test/"
    ],
    "per-file": true,
    "lines": [
      85,
      92
    ],
    "statements": [
      85,
      92
    ],
    "functions": [
      85,
      92
    ],
    "branches": [
      85,
      92
    ]
  }
}
