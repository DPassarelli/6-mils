{
  "name": "6-mils",
  "version": "0.4.0",
  "description": "A JS library for sending, receiving, and parsing cXML messages.",
  "main": "main.js",
  "scripts": {
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "lint": "standard",
    "test:unit": "DEBUG=6-mils:* mocha",
    "test": "DEBUG=off npm run lint && nyc mocha --spec test/functional/*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DPassarelli/6-mils.git"
  },
  "keywords": [
    "cxml",
    "xml",
    "commerce"
  ],
  "author": "David Passarelli <dpassarelli@camelotcg.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/DPassarelli/6-mils/issues"
  },
  "homepage": "https://github.com/DPassarelli/6-mils#readme",
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.11",
    "mocha": "^7.1.1",
    "nock": "^12.0.3",
    "nyc": "^15.0.0",
    "standard": "^14.3.3"
  },
  "dependencies": {
    "debug": "^4.1.1",
    "got": "^10.6.0",
    "is-plain-obj": "^2.1.0",
    "lodash.merge": "^4.6.2",
    "moment": "^2.24.0",
    "nunjucks": "^3.2.1",
    "ulid": "^2.3.0",
    "xml-js": "^1.6.11"
  },
  "mocha": {
    "reporter": "min",
    "exclude": "node_modules/**/*.spec.js",
    "file": "test/setup.js",
    "recursive": true,
    "spec": "**/*.spec.js",
    "ui": "bdd"
  },
  "standard": {
    "global": [
      "expect"
    ]
  },
  "nyc": {
    "check-coverage": true,
    "exclude": [
      "**/*.spec.js",
      "test/"
    ],
    "per-file": true,
    "lines": 92,
    "statements": 92,
    "functions": 92,
    "branches": 92
  }
}
